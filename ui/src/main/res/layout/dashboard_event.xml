<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DenseTwoLineListItem">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_check" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_name"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="Event 1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/date_text"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="2016-09-10" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/refresh_button"
        style="@style/TransparentIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_refresh_gray"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/error_text"
        style="@style/ListItemErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/refresh_button"
        android:text="Sync error"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>